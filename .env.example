# Parallax Analytics Last Frontier Environment Variables Example

# Node.js environment
NODE_ENV=development
PORT=3000

# JWT and Auth
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_TO_DIFFERENT_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
OAUTH_GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_OAUTH_CLIENT_ID
OAUTH_GOOGLE_CLIENT_SECRET=REPLACE_WITH_GOOGLE_OAUTH_CLIENT_SECRET
OAUTH_GITHUB_CLIENT_ID=REPLACE_WITH_GITHUB_OAUTH_CLIENT_ID
OAUTH_GITHUB_CLIENT_SECRET=REPLACE_WITH_GITHUB_OAUTH_CLIENT_SECRET

# API Keys
API_KEY_SALT=CHANGE_ME_TO_SECURE_RANDOM_SALT_STRING

# Database (Update with your PostgreSQL credentials)
PGHOST=localhost
PGPORT=5432
PGUSER=REPLACE_WITH_DB_USERNAME
PGPASSWORD=REPLACE_WITH_SECURE_DB_PASSWORD
PGDATABASE=REPLACE_WITH_DB_NAME
PGPOOL_MIN=1
PGPOOL_MAX=10
PG_CONNECTION_TIMEOUT_MS=5000
PG_IDLE_TIMEOUT_MS=10000

# Unified PostgreSQL connection string for application frameworks
DATABASE_URL="postgresql://DB_USER:DB_PASSWORD@DB_HOST:DB_PORT/DB_NAME"
# Redis
REDIS_URL=redis://localhost:6379

# CORS (Production only - comma-separated origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Parallax Analytics VCU Inference Service API
PARALLAX_API_KEY=REPLACE_WITH_PARALLAX_API_KEY
PARALLAX_API_URL=https://api.parallaxanalytics.com/vcu-inference
