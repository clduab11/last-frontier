# Last Frontier Platform - Production Environment Configuration
# Copy this file to .env and update with your production values

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ===== DATABASE CONFIGURATION =====
# PostgreSQL Database Settings
PGHOST=localhost
PGPORT=5432
PGUSER=lastfrontier_prod
PGPASSWORD=your_secure_database_password_here
PGDATABASE=lastfrontier_production

# Database Pool Settings
PGPOOL_MIN=2
PGPOOL_MAX=20
PGPOOL_IDLE_TIMEOUT=30000

# ===== AUTHENTICATION & SECURITY =====
# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_minimum_32_characters

# ===== VCU TOKEN MANAGEMENT =====
# VCU Encryption Key (32 bytes, base64 encoded)
VCU_ENCRYPTION_KEY=your_base64_encoded_32_byte_encryption_key_here

# VCU API Configuration
VCU_API_BASE_URL=https://api.vcu.production.com
VCU_API_TIMEOUT=30000
VCU_DEFAULT_QUOTA=1000
VCU_DEFAULT_RATE_LIMIT=100

# ===== PARALLAX API INTEGRATION =====
# Parallax API Configuration
PARALLAX_API_BASE_URL=https://api.parallax.production.com
PARALLAX_API_KEY=your_parallax_production_api_key_here
PARALLAX_API_TIMEOUT=30000
PARALLAX_MAX_RETRIES=3
PARALLAX_RETRY_DELAY=1000

# ===== REDIS CONFIGURATION =====
# Redis Cache Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TTL=3600

# ===== MONITORING & LOGGING =====
# Application Monitoring
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Metrics Collection
METRICS_ENABLED=true
METRICS_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000

# ===== RATE LIMITING =====
# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===== CORS CONFIGURATION =====
# Cross-Origin Resource Sharing
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# ===== SSL/TLS CONFIGURATION =====
# HTTPS Settings
HTTPS_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# ===== EXTERNAL SERVICES =====
# Email Service (for notifications)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# ===== BACKUP & RECOVERY =====
# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# ===== FEATURE FLAGS =====
# Feature Toggle Configuration
FEATURE_CONTENT_GENERATION=true
FEATURE_VCU_MANAGEMENT=true
FEATURE_ADVANCED_MONITORING=true
FEATURE_RATE_LIMITING=true

# ===== DEPLOYMENT CONFIGURATION =====
# Deployment Settings
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_TIMESTAMP=2025-05-29T22:15:00Z
HEALTH_CHECK_PATH=/api/v1/health
READINESS_CHECK_PATH=/api/v1/health/detailed

# ===== SECURITY HEADERS =====
# Security Configuration
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# ===== PERFORMANCE OPTIMIZATION =====
# Performance Settings
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
STATIC_CACHE_MAX_AGE=86400
API_CACHE_TTL=300

# ===== ERROR HANDLING =====
# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_WEBHOOK_URL=https://your-error-tracking-service.com/webhook
SENTRY_DSN=your_sentry_dsn_here

# ===== SCALING CONFIGURATION =====
# Horizontal Scaling
CLUSTER_ENABLED=true
CLUSTER_WORKERS=auto
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# ===== MAINTENANCE MODE =====
# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1